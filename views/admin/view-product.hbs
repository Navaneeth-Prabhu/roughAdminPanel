<section>
    <div class="container">
        <div class="row mt-5">
            <a href="/admin/add-product" class="btn btn-success my-5 ">Add Product</a>
        </div>
  <table class="table mt-5" id="userTable">
  <thead>
    <tr>
      {{!-- <th scope="col">#</th> --}}
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Password</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      {{!-- <th scope="row">1</th> --}}
      <td>{{this.Name}}</td>
      <td>{{this.Email}}</td>
      <td>{{this.Password}}</td>
      <td><a href="/admin/edit-user/{{this._id}}" class="btn btn-primary">Edit</a></td>
      <td><a href="/admin/delete-user/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you suer you want to delete {{this.Name}}?')">Delete</a></td>
    </tr>
    {{/each}}

  </tbody>
</table>
    </div>
</section>
<script>
  $(document).ready(function() {
    $('#userTable').DataTable();
  });
</script>